<% translations = model.translations%>

<ul id="model_translations">
  <% Locale.active.each do |l| %>
    <% unless l.iso_code == model.locale %>
      <li>
        <%= l.native_name %>
        <% if translated = translations.select{|t| t.locale == l.iso_code}.first %>
          <%= link_to t("ubiquo.edit"), url_for(params.merge(:id => translated.id, :locale => l.iso_code)) %>
        <% else %>
          <%= link_to t("ubiquo.translate"), url_for(params.merge(:action => :new, :id => nil, :from => model.content_id, :locale => l.iso_code)) %>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
